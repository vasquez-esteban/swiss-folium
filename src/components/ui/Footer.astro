---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Instagram from "../../assets/instagram.svg";
import Linkedin from "../../assets/linkedin.svg";
import Twitter from "../../assets/twitter.svg";
import Youtube from "../../assets/youtube.svg";

const logos = [
  { name: "Facebook", src: Facebook },
  { name: "Instagram", src: Instagram },
  { name: "Linkedin", src: Linkedin },
  { name: "Twitter", src: Twitter },
  { name: "Youtube", src: Youtube },
];

const links = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Services", href: "/services" },
  { name: "Contact", href: "/contact" },
  { name: "Questions", href: "/questions" },
  { name: "See More", href: "/see-more" },
];
---

<section class="w-full max-w-[1366px] p-[30px]">
  <div class="px-[15px] lg:px-[60px]">
    <div
      class="flex h-[180px] w-full flex-col items-center justify-around bg-slate-400 p-[100px] text-black md:flex-row"
    >
      <h2 class="max-w-none">Services Subscribe</h2>
      <div>Form Short</div>
    </div>
    <div
      class="flex h-auto flex-col items-start md:flex-row md:items-center md:justify-between"
    >
      <ul class="mb-5 flex list-none flex-wrap gap-[30px] font-medium md:mb-0">
        {
          links.map((link) => {
            return (
              <li>
                <a href={link.href}>{link.name}</a>
              </li>
            );
          })
        }
      </ul>
      <ul class="flex gap-5">
        {
          logos.map((logo) => {
            return (
              <li>
                <a href="/">
                  <Image src={logo.src} alt={logo.name} class="w-6" />
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
    <div class="h-[1px] bg-black"></div>
    <div
      class="mt-4 flex h-20 flex-col items-start justify-between md:mt-0 md:flex-row md:items-center"
    >
      <span>@2024 Company name</span>&nbsp
      <span>
        <a href="/">Terms of use</a> & <a href="/">Privacy policy</a>
      </span>
    </div>
  </div>
</section>
