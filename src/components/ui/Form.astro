<section class="flex h-screen items-center justify-center bg-gray-200">
  <form class="w-full max-w-md rounded bg-white p-6 shadow-md">
    <div class="mb-4">
      <label for="" class="mb-2 block text-gray-700"
        >Name:

        <input
          type="text"
          id="name"
          name="name"
          placeholder="Name"
          class="w-full rounded-md border px-3 py-2 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </label>
    </div>

    <div class="mb-4">
      <label for="email" class="mb-2 block text-gray-700"
        >Email:

        <input
          type="text"
          id="email"
          name="email"
          placeholder="Email"
          class="w-full rounded-md border px-3 py-2 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </label>
    </div>

    <div class="mb-4">
      <label for="subject" class="mb-2 block text-gray-700"
        >Subject:
        <input
          type="text"
          id="subject"
          name="subject"
          placeholder="Subject"
          class="w-full rounded-md border px-3 py-2 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </label>
    </div>

    <div class="mb-4">
      <label for="message" class="mb-2 block text-gray-700"
        >Message:

        <textarea
          id="message"
          name="message"
          placeholder="Message"
          class="w-full rounded-md border px-3 py-2 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
        ></textarea>
      </label>
    </div>

    <button
      type="submit"
      name="submit"
      class="w-full rounded-md bg-blue-500 px-4 py-2 text-white hover:bg-blue-600"
      >Send</button
    >
  </form>
</section>
